        <TextBox HorizontalAlignment="Left" Height="311" Margin="33,24,0,0" TextWrapping="Wrap" Text="{Binding Path=TaskNotification}" VerticalAlignment="Top" Width="644" Background="#FF3C3939" Foreground="White"/>
